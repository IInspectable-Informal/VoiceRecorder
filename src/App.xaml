<Application
    x:Class="VoiceRecorder.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:VoiceRecorder"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls">

    <Application.Resources>
        <muxc:XamlControlsResources>
            <muxc:XamlControlsResources.MergedDictionaries>
                <ResourceDictionary>
                    <Color x:Key="MediaTransportControlsPanelBackground">Transparent</Color>
                    <x:Double x:Key="MediaTransportControlsMinWidth">NaN</x:Double>
                    <x:Double x:Key="MediaTransportControlsMaxWidth">NaN</x:Double>
                    <x:Double x:Key="MediaTransportControlsBorderThickness">1</x:Double>
                </ResourceDictionary>
            </muxc:XamlControlsResources.MergedDictionaries>
        </muxc:XamlControlsResources>			   
    </Application.Resources>

</Application>
